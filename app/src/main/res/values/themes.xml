<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.SelfManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Gunakan default Material 3 -->
    </style>

    <style name="Theme.SelfManager" parent="Base.Theme.SelfManager" />

    <!-- ===================== -->
    <!-- CHIP -->
    <!-- ===================== -->
    <style name="ChipStyle">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/chip_background_unselected</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipStyle.Selected" parent="ChipStyle">
        <item name="android:background">@drawable/chip_background_selected</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ===================== -->
    <!-- SETTINGS -->
    <!-- ===================== -->
    <style name="SettingsSectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- âœ… FIXED: Material3 CardView -->
    <style name="SettingsCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
    </style>


    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F0F0F0</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- ===================== -->
    <!-- BOTTOM NAV -->
    <!-- ===================== -->
    <style name="TransparentIndicator"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- ===================== -->
    <!-- NUMPAD -->
    <!-- ===================== -->
    <style name="NumpadKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/numpad_key_background</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
