<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".SettingsActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/settings_app_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="SelfManager"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/settings_app_logo"
        app:layout_constraintStart_toEndOf="@id/settings_app_logo"
        app:layout_constraintTop_toTopOf="@id/settings_app_logo" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/settings_bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_app_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Settings"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Manage your account and preferences"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- Data & Security Section -->
            <TextView
                style="@style/SettingsSectionHeader"
                android:text="DATA &amp; SECURITY" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@color/white"
                     android:orientation="vertical">
                    <include layout="@layout/settings_item_cloud_backup" />
                    <View style="@style/SettingsDivider" />
                    <include layout="@layout/settings_item_restore_data" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Preferences Section -->
            <TextView
                style="@style/SettingsSectionHeader"
                android:text="PREFERENCES" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <include layout="@layout/settings_item_manage_categories" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Footer -->
            <TextView
                android:id="@+id/footer_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:text="SelfManager v1.0.2"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/footer_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="ON THE WAY FINANCIAL FREEDOM"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/settings_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:itemActiveIndicatorStyle="@style/TransparentIndicator"
        app:itemRippleColor="@color/bottom_nav_ripple_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:backgroundTint="#1976D2"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/settings_bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/settings_bottom_navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>